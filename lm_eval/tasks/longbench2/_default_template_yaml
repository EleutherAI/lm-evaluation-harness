dataset_path: THUDM/LongBench-v2
test_split: train
output_type: generate_until
doc_to_text: "{{question.strip()}}\nA. {{choice_A}}\nB. {{choice_B}}\nC. {{choice_C}}\nD. {{choice_D}}\nAnswer:"
doc_to_target: "{{answer}}"
generation_kwargs:
  until:
    - "</s>"
    - "\n"
metric_list:
  - metric: exact_match
    aggregation: mean
    higher_is_better: true
    ignore_punctuation: true
    ignore_case: true
filter_list:
  - name: get_response
    filter:
      - function: "regex"
        regex_pattern: "^(.*?)(?=\\n|$)"
      - function: remove_whitespace
      - function: "regex"
        regex_pattern: "^(.*?)\\s*$"
      - function: take_first
